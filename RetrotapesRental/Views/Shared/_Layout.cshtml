<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Retrotapes_VHS_Rentals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Retrotapes_VHS_Rentals.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>


<body>
    <header class="border-bottom shadow-sm bg-white sticky-top">

        <!-- Top Bar -->
        <div class="top-bar p-xl-3 py-2 bg-light">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
                <!-- Logo -->
                <div class="d-flex align-items-center">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none me-3">
                        <img src="~/Logo.png" alt=" Retrotapes Rentals Logo" class="img-fluid" style="max-height: 50px;">
                    </a>

                </div>


                <!-- User Menu (when logged in) -->
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="Bookings" asp-action="MyBookings"><i class="bi bi-calendar-check me-2"></i>My Bookings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
                else if (!User.Identity.IsAuthenticated)
                {
                    <div>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary rounded-pill me-2">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary rounded-pill">
                            <i class="bi bi-person-plus me-1"></i> Register
                        </a>
                    </div>
                }
            </div>
        </div>

        <!--Main Nav Menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid px-3">
                <!-- Mobile Brand -->
                <a class="navbar-brand d-lg-none text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Retrotapes_VHS_Rentals</a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Movies" asp-action="Index">
                                <i class="bi bi-collection-play me-1"></i> Movies
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Movies" asp-action="Genres">
                                <i class="bi bi-tags me-1"></i> Genres
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Movies" asp-action="NewReleases">
                                <i class="bi bi-star me-1"></i> New Releases
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle me-1"></i> About
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Home" asp-action="Contact">
                                <i class="bi bi-envelope me-1"></i> Contact
                            </a>
                        </li>

                        <!-- Admin menu (visible ONLY to admin) -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle px-3 py-2 text-dark fw-medium" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear me-1"></i> Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageMovies">Manage Movies</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageUsers">Manage Users</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageBookings">Manage Bookings</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Reports">Reports</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Search Form -->
                    <form class="d-flex me-2" asp-controller="Movies" asp-action="Search" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control rounded-pill rounded-end" placeholder="Search movies..." name="searchString" aria-label="Search">
                            <button class="btn btn-primary rounded-pill rounded-start" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Retrotapes_VHS_Rentals - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
